{% comment %}
    Render theme specific icons

    Accepts:
    - name:      {String} Icon name
    - css_class: {String} Additional CSS classes for svg

    Usage:
    {% render 'icon-theme', name: 'email', css_class: 'w-6 h-6' %}
{% endcomment %}

{%- assign css_class = css_class | default: '' -%}

{%- capture icon -%}
    {%- case name -%}

        {%- when 'arrow-left' -%}
<svg width="22" height="18" viewBox="0 0 22 18" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M10 1L2 9L10 17" stroke="currentColor" stroke-width="2"/><path d="M2 9H22" stroke="currentColor" stroke-width="2"/></svg>


        {%- when 'arrow-right' -%}
<svg width="22" height="18" viewBox="0 0 22 18" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 1L20 9L12 17" stroke="currentColor" stroke-width="2"/><path d="M20 9H0" stroke="currentColor" stroke-width="2"/></svg>

    {%- endcase -%}
{%- endcapture -%}
{{
    icon
    | replace: '<svg ', '<svg class="#class#" aria-hidden="true" focusable="false" role="presentation" '
    | replace: '#class#', css_class
}}
