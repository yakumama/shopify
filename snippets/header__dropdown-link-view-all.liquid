{% comment %}
    Render Link "View All" in the header dropdown content: Product List / Collection list

    Accepts:
     - viewAll: {Syting}
{% endcomment %}

<style>
    @media (min-width: 990px) {
        .link-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .link-wrapper a > svg {
            padding: .5rem;
            width: 3rem;
            height: 3rem;
            border-radius: 100%;
            border: 1px solid var(--color-foreground-75);
        }

        .link-wrapper a:hover > svg {
            border-color: var(--color-link-hover);
            transition: border-color .5s linear forwards;
        }

        .link-wrapper a + span {
            position: relative;
        }

        .link-wrapper a:hover + span:after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 0;
            border-bottom: solid 2px var(--color-link-hover);
            animation: border_bottom .3s linear forwards;
        }

        @keyframes border_bottom {
            0%{width: 0%;}
            100%{width: 100%;}
        }
    }
</style>

<div class="link-wrapper">
    <a
        class="link view-all"
        href="{{ viewAll | default: '#/' }}"
        aria-label="{{ 'sections.collection_list.view_all' | t }}"
    >
        {% render 'icons-solid', name: 'arrow-right', css_class: 'icon-arrow' %}
    </a>
    <span class="view-all-title">{{ 'sections.collection_list.view_all' | t }}</span>
</div>
