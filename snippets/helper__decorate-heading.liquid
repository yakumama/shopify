{%- comment -%}
    Accepts:
    - heading {String}
{%- endcomment -%}

{%- liquid
    assign heading = heading | escape
    assign words = heading | split: ' '

    if words.size > 1
        for word in words
            if forloop.first
                echo '<b>'
            endif
            if forloop.last
                echo '</b>'
            endif
            echo word | append: ' '
        endfor
    else
        echo heading
    endif
-%}
