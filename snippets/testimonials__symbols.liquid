{%- liquid
    assign has_stars = section.settings.show_rating
    assign has_photo = section.settings.show_photo

    unless has_stars
        assign form = section.blocks | where: 'type', 'form' | first
        unless form.settings.field_rating == 'hidden'
            assign has_stars = true
        endunless
    endunless
-%}

