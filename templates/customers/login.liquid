{{ 'customer.css' | asset_url | stylesheet_tag }}

{% comment %}
    - temporary solution to show the icons-bar section in all customers pages
{% endcomment %}
<div class="icons-bar__container mt-0">
    {% section 'icons-bar' %}
</div>

<style>
    form .actions {
        margin: 2rem 0 0;
    }

    form .actions .link {
        margin: 1rem 0;
        width: 100%;
    }

    .link.recover {
        display: block;
        margin: 1rem 0;
        width: max-content;
    }

    #recover,
    #recover + div,
    #recover:target ~ #login,
    #recover:target ~ #login + div {
        position: absolute;
        visibility: hidden;
        opacity: 0;
    }

    #recover:target,
    #recover:target + div {
        position: static;
        visibility: visible;
        opacity: 1;
    }

    @media (min-width: 768px), print {
        form .actions {
            align-items: center;
            display: flex;
            justify-content: space-between;
        }

        form .actions .link {
            margin: 0;
            width: auto;
        }
    }
</style>

<div class="customer login">
    <h1 id="recover" tabindex="-1">
        {{ 'customer.recover_password.title' | t }}
    </h1>
    <div>
        <p>
            {{ 'customer.recover_password.subtext' | t }}
        </p>

        {%- form 'recover_customer_password' -%}
            {% assign recover_success = form.posted_successfully? %}
            {%- if form.errors -%}
                {% render 'message-error', text: form.errors.messages.form %}
            {%- endif -%}
            <div class="field">
                <label for="RecoverEmail" class="field__label">
                    {{ 'customer.login_page.email' | t }}
                </label>
                <input
                    type="email"
                    value=""
                    name="email"
                    id="RecoverEmail"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    aria-required="true"
                    required
                    {% if form.errors %}
                        aria-invalid="true"
                        aria-describedby="RecoverEmail-email-error"
                        autofocus
                    {% endif %}
                    placeholder="{{ 'customer.login_page.email' | t }}"
                >
            </div>

            <div class="actions">
                <button>
                    {{ 'customer.login_page.submit' | t }}
                </button>

                <a href="#login" class="button button--tertiary">
                    {{ 'customer.login_page.cancel' | t }}
                </a>
            </div>
        {%- endform -%}
    </div>

    <h1 id="login" tabindex="-1">
        {{ 'customer.login_page.title' | t }}
    </h1>
    <div>
        {%- if recover_success == true -%}
            <div class="form__message form__message--success" tabindex="-1">
                {% render 'icons-outline', name: 'check-circle' %}
                {{ 'customer.recover_password.success' | t }}
            </div>
        {%- endif -%}
        {%- form 'customer_login' -%}
            {%- if form.errors -%}
                <div class="form__message form__message--error" tabindex="-1">
                    <span class="visually-hidden">{{ 'accessibility.error' | t }} </span>
                    <svg aria-hidden="true" focusable="false" role="presentation" class="icon-error">
                        <use href="#icon-x" style="color: #fff"/>
                    </svg>
                    <div>
                        <span>{{ 'templates.contact.form.error_heading' | t }}</span>
                        {{ form.errors | default_errors }}
                    </div>
                </div>
            {%- endif -%}

            <div class="field">
                <label for="CustomerEmail" class="field__label">
                    {{ 'customer.login_page.email' | t }}
                </label>
                <input
                    type="email"
                    name="customer[email]"
                    id="CustomerEmail"
                    autocomplete="email"
                    autocorrect="off"
                    autocapitalize="off"
                    aria-required="true"
                    required
                    {% if form.errors contains 'form' %}
                        aria-invalid="true"
                    {% endif %}
                    placeholder="{{ 'customer.login_page.email' | t }}"
                >
            </div>

            {%- if form.password_needed -%}
                <div class="field">
                    <label for="CustomerPassword" class="field__label">
                        {{ 'customer.login_page.password' | t }}
                    </label>
                    <input
                        type="password"
                        value=""
                        name="customer[password]"
                        id="CustomerPassword"
                        autocomplete="current-password"
                        aria-required="true"
                        required
                        {% if form.errors contains 'form' %}
                            aria-invalid="true"
                        {% endif %}
                        placeholder="{{ 'customer.login_page.password' | t }}"
                    >
                </div>

                <a href="{{ routes.account_login_url }}#recover" class="link recover">
                    {{ 'customer.login_page.forgot_password' | t }}
                </a>
            {%- endif -%}

            <div class="actions">
                <button>
                    {{ 'customer.login_page.sign_in' | t }}
                </button>

                <a href="{{ routes.account_register_url }}" class="link create-account">
                    {{ 'customer.login_page.create_account' | t }}
                </a>
            </div>
        {%- endform -%}
    </div>

    {%- if shop.checkout.guest_login -%}
        <div>
            <hr>
            <h2>{{ 'customer.login_page.guest_title' | t }}</h2>

            {%- form 'guest_login' -%}
                <button>
                    {{ 'customer.login_page.guest_continue' | t }}
                </button>
            {%- endform -%}
        </div>
    {%- endif -%}
</div>
