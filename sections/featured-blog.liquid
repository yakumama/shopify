{% render 'featured-blog',
    blog: section.settings.blog,
    articles_list: null,
    articles_limit: section.settings.post_limit,
    heading: section.settings.heading,
    excerpt_limit: section.settings.excerpt_limit,
    show_author: section.settings.show_author,
    show_comments: section.settings.show_comments,
    show_date: section.settings.show_date,
    show_image: section.settings.show_image,
    show_link: section.settings.show_link,
    tags_limit: section.settings.tags_limit
%}

{% schema %}
{
  "name": "t:sections.featured-blog.name",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Featured recent posts",
      "label": "t:sections.featured-blog.settings.heading.label"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "t:sections.featured-blog.settings.blog.label"
    },
    {
      "type": "range",
      "id": "post_limit",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 3,
      "label": "t:sections.featured-blog.settings.post_limit.label"
    },
    {
      "type": "header",
      "content": "t:sections.main-blog.settings.header.content"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_image.label",
      "info": "t:sections.featured-blog.settings.show_image.info"
    },
    {
      "type": "range",
      "id": "tags_limit",
      "min": 0,
      "max": 6,
      "step": 1,
      "default": 3,
      "unit": "tag",
      "label": "t:sections.main-blog.settings.tags_limit.label",
      "info": "t:sections.main-blog.settings.tags_limit.info"
    },
    {
      "type": "range",
      "id": "excerpt_limit",
      "min": 0,
      "max": 40,
      "step": 2,
      "default": 30,
      "unit": "wrd",
      "label": "t:sections.main-blog.settings.excerpt_limit.label",
      "info": "t:sections.main-blog.settings.excerpt_limit.info"
    },
    {
      "type": "checkbox",
      "id": "show_link",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_link.label"
    },
    {
      "type": "checkbox",
      "id": "show_comments",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_comments.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-blog.presets.name",
      "settings": {
        "blog": "News"
      }
    }
  ]
}
{% endschema %}
